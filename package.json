{
  "name": "textarea-markdown-editor",
  "version": "1.0.0-rc.1",
  "description": "UI headless React markdown editor using only textarea",
  "homepage": "https://github.com/Resetand/markdown-textarea",
  "author": "Resetand",
  "license": "MIT",
  "keywords": [
    "react",
    "textarea",
    "markdown",
    "editor",
    "formatting",
    "shortcuts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "dependencies": {
    "mousetrap": "^1.6.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.2.0",
    "@testing-library/user-event": "14.2.0",
    "@types/common-tags": "1.8.1",
    "@types/jest": "27.5.1",
    "@types/mousetrap": "1.6.9",
    "@types/node": "17.0.33",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.4",
    "common-tags": "1.8.2",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4"
  },
  "scripts": {
    "build": "tsc",
    "test": "./node_modules/.bin/jest --colors",
    "test:coverage": "npm run test -- --coverage --coverageDirectory=./artifacts",
    "prepublish": "npm run test -- --watchAll=false && npm run build",
    "start-sandbox": "npm run build; npm link textarea-markdown-editor; npm link sandbox/node_modules/react; npm --prefix sandbox run start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}