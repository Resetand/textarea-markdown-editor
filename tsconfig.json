{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "dist",
        "declaration": true,
        "isolatedModules": true
    },

    "include": ["src/lib"]
}
